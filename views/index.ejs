<%- include('partials/header.ejs') %>
<%- include('partials/navbar.ejs') %>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap');

    body {
        background-color: #111111; /* Fundo preto elegante */
        font-family: 'Montserrat', sans-serif; /* Fonte estilosa */
        color: #f5f5f5; /* Cor de texto branco */
    }
    
    .jumbotron {
        background: rgba(255, 255, 255, 0.1); /* Fundo translúcido */
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2); /* Sombra escura */
        padding: 2rem;
        margin-bottom: 2rem;
        color: #fff; /* Texto branco */
    }

    .btn-success {
        background-color: #ff6600; /* Botão laranja vibrante */
        border-color: #ff6600;
        transition: background-color 0.3s;
    }

    .btn-success:hover {
        background-color: #cc5200; /* Laranja mais escuro no hover */
    }

    .card {
        background: #222; /* Fundo cinza escuro */
        border-radius: 5px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2); /* Sombra leve */
        padding: 1.5rem;
    }

    .card-header {
        background-color: #ff6600; /* Cabeçalho laranja */
        color: white;
        border-radius: 5px 5px 0 0;
        padding: 1rem;
    }

    a.text-dark {
        color: #fff; /* Links brancos */
    }

    a.text-dark:hover {
        color: #ff6600; /* Links laranja ao passar o mouse */
        text-decoration: none; /* Sem sublinhado */
    }

    /* Estilos do dashboard */
    .dashboard {
        display: flex;
        justify-content: space-around;
        margin-top: 2rem;
    }

    .dashboard-card {
        background: #333; /* Fundo cinza escuro */
        border-radius: 5px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2); /* Sombra escura */
        padding: 2rem;
        text-align: center;
        color: #fff;
    }

    .dashboard-card h3 {
        margin-bottom: 1.5rem;
        color: #ff6600; /* Título laranja */
    }

    .dashboard-card p {
        font-size: 1.5rem;
        font-weight: bold;
    }

    .dashboard-card:hover {
        background-color: #444; /* Card mais escuro ao passar o mouse */
    }
</style>

<div class="container mt-4">
    <div class="jumbotron">
        <h1 class="display-5"><strong>Painel Verve</strong></h1>
        <p class="lead">Gerencie seus clientes, produtos e pedidos com eficiência.</p>
        <hr class="my-4">
        <p class="lead">
            <a class="btn btn-success btn-lg" href="/pedidos" role="button">Verificar pedidos</a>
        </p>
    </div>

    <div class="card">
        <div class="card-header">
            <h2 class="text-center">Para onde deseja ir?</h2>
        </div>
        <div class="card-body">
            <ul class="list-unstyled d-flex justify-content-around">
                <li>
                    <a href="/" class="btn btn-light text-dark">Home</a>
                </li>
                <li>
                    <a href="/clientes" class="btn btn-light text-dark">Clientes</a>
                </li>
                <li>
                    <a href="/produtos" class="btn btn-light text-dark">Produtos</a>
                </li>
                <li>
                    <a href="/pedidos" class="btn btn-light text-dark">Pedidos</a>
                </li>
            </ul>
        </div>
    </div>
    

    <!-- Seção do Dashboard -->
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="dashboard-card">
                <h3>Vendas por Mês</h3>
                <p id="vendasPorMes">R$ 0,00</p>
            </div>
        </div>
        <div class="col-md-6">
            <div class="dashboard-card">
                <h3>Valor Total das Vendas</h3>
                <p id="valorTotalVendas">R$ 0,00</p>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer.ejs') %>

<script>
    const vendasPorMes = 50000;
    const valorTotalVendas = 200000;

    // Atualizando o dashboard com os valores
    document.getElementById('vendasPorMes').innerText = `R$ ${vendasPorMes.toLocaleString()}`;
    document.getElementById('valorTotalVendas').innerText = `R$ ${valorTotalVendas.toLocaleString()}`;
</script>
