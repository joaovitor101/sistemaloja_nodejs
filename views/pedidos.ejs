<%- include('partials/header.ejs') %>
<%- include('partials/navbar.ejs') %>

<style>
    body {
        background-color: #f0f2f5; /* Fundo suave */
    }
    .card {
        background: rgba(255, 255, 255, 0.9); /* Fundo do card com transparência */
        border-radius: 10px; /* Bordas arredondadas */
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1); /* Sombra leve */
        margin-top: 2rem; /* Espaçamento superior */
    }
    table {
        width: 100%; /* Tabela ocupa toda a largura do card */
        border-collapse: collapse; /* Colapsa as bordas */
    }
    th, td {
        padding: 1rem; /* Espaçamento interno */
        text-align: left; /* Alinhamento à esquerda */
    }
    th {
        background-color: #343a40; /* Cabeçalho escuro */
        color: white; /* Texto branco */
    }
    tr:hover {
        background-color: rgba(0, 123, 255, 0.1); /* Efeito de hover nas linhas */
    }
    img {
        width: 30px; /* Tamanho da imagem */
        border-radius: 50%; /* Imagem redonda */
    }
</style>

<div class="container">
    <div class="card">
        <div class="card-header">
            <h1 class="h5">Pedidos</h1>
        </div>
        <div class="card-body">
            <table>
                <thead>
                    <tr>
                        <th></th>
                        <th>Número:</th>
                        <th>Valor:</th>
                    </tr>
                </thead>
                <tbody>
                    <% pedidos.forEach(pedido => { %>
                    <tr>
                        <td><img src="imgs/order.png" alt="Pedido"></td>
                        <td><%= pedido.numero %></td>
                        <td><%= pedido.valor.toLocaleString('pt-br', {style: 'currency', currency: 'BRL'}) %></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('partials/footer.ejs') %>
